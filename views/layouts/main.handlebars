        <nav class="navbar">
            <ul class="nav justify-content-end">
                <li><a href="/profile" class="topbar">{{username}}</a></li>
                <div></div>
                <li><a href="/api/users/logout" class="topbar">Logout</a></li>
            </ul>
        </nav>

        {{else}}

        <nav class="navbar">
            <ul class="nav justify-content-end">
                <li><a href="/signup" class="topbar">Sign Up</a></li>
                <div></div>
                <li><a href="/login" class="topbar">Login</a></li>
            </ul>
        </nav>

        {{/if}}

    </header>

